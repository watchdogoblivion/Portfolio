<%= form_with(model: topic, local: true) do |form| %>
  <% if topic.errors.any? %>
    <% topic.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: "form-control-topic", value: 'Edit Title' %>
  </div>

  <div class="form-group row">
    <% unless topic.title.nil?%>
      <div class= "col-md-6">
        <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }%>
      </div>
      <div class= "col-md-6">
        <%= form.submit "Sumbit", class: "btn btn-primary" %>
      </div>
    <% else %>
      <div class= "col-md-12">
        <%= form.submit "Sumbit", class: "btn btn-primary" %>
      </div>
    <% end %>
    
  </div>
<% end %>

