 
    <div class="col-md-12">
      <div class="card flex-md-row mb-4 shadow-sm">
        <div class="card-body d-flex flex-column align-items-start">
            <div >
              <h3 class= "featured-post">Featured post</h3>
              <div class= "blog-title"><%= @featured_blogs.last.title %></div>
              <div class="mb-1 text-muted">
                <%= distance_of_time_in_words( @featured_blogs.last.created_at, Time.now) %> ago
              </div>
              <% if @featured_blogs.last.body.length > 320 %>
                <p class = "featured-body"><%= @featured_blogs.last.body[0,320] + "...." %></p>
              <% else %>
                <p class = "featured-body"><%= @featured_blogs.last.body %></p>
              <% end %>
              <p><%= link_to "Continue reading", @featured_blogs.last%></p>
            </div>
        </div> 
      </div>
    </div> 
