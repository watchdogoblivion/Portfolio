
    <div class="col-md-12">
      <div class="card flex-md-row mb-4 shadow-sm">
        <div class="card-body d-flex flex-column align-items-start">
            <div >
              <h3>Featured post</h3>
              <div><%= blogs.last.title %></div>
              <div class="mb-1 text-muted">
                <%= distance_of_time_in_words( blogs.last.created_at, Time.now) %> ago
              </div>
              <% if blogs.last.body.length > 295 %>
                <p class = "blog-body"><%= blogs.last.body[0,295] + "...." %></p>
              <% else %>
                <p class = "blog-body"><%= blogs.last.body %></p>
              <% end %>
              <p><%= link_to "Continue reading", blogs.last%></p>
            </div>
        </div> 
      </div>
    </div>
