<h1>Create a new Portfolio item</h1>

<%= form_with(model: @portfolio_item, local: true) do |p| %>

  <div class="field">
    <%= p.label :title %>
    <%= p.text_field :title %>
  </div>

  <div class="field">
    <%= p.label :subtitle %>
    <%= p.text_field :subtitle %>
  </div>
  
  <div class="field">
    <%= p.label :body %>
    <%= p.text_area :body %>
  </div>

  <div class="actions">
    <%= p.submit %>
  </div>
<% end %>