<% @portfolio_items.each do |portfolio_item| %>
	<div class="col-md-4">
		<div class="card mb-4 shadow-sm">
			<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
			<div class="card-body">
				<p class="card-text">
					<span><%=  portfolio_item.title %></span>
					<%= portfolio_item.subtitle%>
				</p>
				<div>
					<div>
					 	<button type="button" class="btn btn-sm btn-outline-secondary">
					 		<%= link_to "View", portfolio_show_path(portfolio_item.id) %> 
					 	</button>
					 	<% if logged_in?(:site_admin) %>
						 	<button type="button" class="btn btn-sm btn-outline-secondary">
						 		<%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %>
						 	</button>
					 	<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>	
<% end %>