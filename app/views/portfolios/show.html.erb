<div class = "container portfolio-container">
	<div class = "row">
		<div class= "col-md-8">
			<!-- This method is to account for heroku ephemeral filesystem not storing images due to dynos resetting every 24 hours, the proper work around is using a cloud storage -->
			<%= place_images (@portfolio_item) %>
		</div>
		<div class= "col-md-4">
			<h1> <%= @portfolio_item.title %> </h1>
			<hr>
			<em> <%= @portfolio_item.subtitle %> </em>
			<p> <%= @portfolio_item.body %> </p>
			<hr>
			<h3>Technologies Used:</h3>
			<% @portfolio_item.technologies.each do |t| %>
				<p> <%= t.name %> </p>
			<% end %>
			<p>
				<%= admin_buttons(@portfolio_item, "show") %>
				<%= user_buttons(@portfolio_item, "show") %>
			</p>
		</div>
	</div>
</div>




