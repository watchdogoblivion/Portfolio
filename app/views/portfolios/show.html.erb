<div class = "container portfolio-container">
	<div class = "row">
		<div class= "col-md-8">
			<!-- This method is to account for heroku ephemeral filesystem not storing images due to dynos resetting every 24 hours, the proper work around is using a cloud storage -->
			<%= place_images (@portfolio_item) %>
		</div>
		<div class= "col-md-4">
			<h1> <%= @portfolio_item.title %> </h1>
			<hr>
			<em> <%= @portfolio_item.subtitle %> </em>
			<p> <%= @portfolio_item.body %> </p>
			<hr>
			<h3>Technologies Used:</h3>
			<% @portfolio_item.technologies.each do |t| %>
				<p> <%= t.name %> </p>
			<% end %>
			<% if logged_in?(:site_admin) %>
			    <p>
					<%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
					<%= link_to "Delete", @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
			    </p>
			<% end %>
		</div>
	</div>
</div>




