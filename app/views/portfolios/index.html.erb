<div class = "container">
	<div class="skills">
		<h1 >Exposure</h1>
		<% Skill.all.order("percent_utilized DESC").each do |skill| %>
			<div class="skill">
			    <h4><%= skill.title %></h4>
			    <div class="progress">
				    <div
				      class="progress-bar progress-bar-striped bg-warning"
				      role="progressbar"
				      aria-valuenow="<%= skill.percent_utilized %>"
				      aria-valuemax="100"
				      style="width: <%= skill.percent_utilized %>%"
				    ></div>
			    </div>
			</div>
		<% end %>
	</div>
</div>
<hr>
<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>
<div class="album py-5 bg-light">
	<div class="container">
		  <%= source_helper("alert alert-warning") %>
		<div class="row <%= "sortable" if logged_in?(:site_admin) %>">
			<%= render "portfolio_item", portfolio_items: @portfolio_items %>
		</div>
	</div>
</div>